<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f1f1f1">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60sp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="小王子"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="#000000"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160sp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_publish_image"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="24sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book_sample"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="220sp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16sp"
                        android:layout_marginStart="8sp"
                        android:text="小王子"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4sp"
                        android:layout_marginStart="8sp"
                        android:text="作者:[法]圣埃克苏佩里"
                        android:textColor="@color/gray_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4sp"
                        android:layout_marginStart="8sp"
                        android:text="出版社:中国友谊出版公司"
                        android:textColor="@color/gray_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_pages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4sp"
                        android:layout_marginStart="8sp"
                        android:text="页数: 111"
                        android:textColor="@color/gray_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_new_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4sp"
                        android:layout_marginStart="8sp"
                        android:text="定价: 19.8"
                        android:textColor="@color/gray_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_isbn_13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8sp"
                        android:text="ISBN: 9787505715660"
                        android:textColor="@color/gray_dark"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:padding="16sp"
                android:visibility="gone"
                app:cardCornerRadius="2sp"
                app:cardElevation="2sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16sp"
                        android:layout_marginTop="16sp"
                        android:text="内容简介"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="15"
                        android:text="@string/book_summary"
                        android:textColor="@color/gray_dark" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_author_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:padding="16sp"
                android:visibility="gone"
                app:cardCornerRadius="2sp"
                app:cardElevation="2sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16sp"
                        android:layout_marginTop="16sp"
                        android:text="作者简介"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_author_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="15"
                        android:text="@string/author_intro"
                        android:textColor="@color/gray_dark" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:padding="16sp"
                app:cardCornerRadius="2sp"
                app:cardElevation="2sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="售价：19"
                        android:textColor="#d11515"
                        android:textSize="18sp"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:src="@drawable/ic_timeline_top" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2017年9月1日"
                            android:textColor="@color/gray_dark"
                            android:gravity="center"
                            android:layout_marginStart="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="于杜洋处开启1段旅程"
                            android:textColor="@color/gray_dark"
                            android:gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="36sp"
                            android:src="@drawable/ic_timeline_middle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2017年9月1日"
                            android:textColor="@color/gray_dark"
                            android:gravity="center"
                            android:layout_marginStart="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="于杜洋处开启1段旅程"
                            android:textColor="@color/gray_dark"
                            android:gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="36sp"
                            android:src="@drawable/ic_timeline_middle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2017年9月1日"
                            android:textColor="@color/gray_dark"
                            android:gravity="center"
                            android:layout_marginStart="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="于杜洋处开启1段旅程"
                            android:textColor="@color/gray_dark"
                            android:gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="36sp"
                            android:src="@drawable/ic_timeline_middle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2017年9月1日"
                            android:textColor="@color/gray_dark"
                            android:gravity="center"
                            android:layout_marginStart="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="于杜洋处开启1段旅程"
                            android:textColor="@color/gray_dark"
                            android:gravity="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="36sp"
                            android:src="@drawable/ic_timeline_middle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2017年9月1日"
                            android:textColor="@color/gray_dark"
                            android:gravity="center"
                            android:layout_marginStart="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="于杜洋处开启1段旅程"
                            android:textColor="@color/gray_dark"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16sp"
        app:cardCornerRadius="2sp">
        <LinearLayout
            android:id="@+id/ll_submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我要卖书"
                android:textSize="16sp"
                android:textColor="@color/gray_dark"
                android:textStyle="normal"
                android:background="#ffffff"/>
            <LinearLayout
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/gray_dark"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"/>
            <TextView
                android:id="@+id/tv_cross"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="让书漂流"
                android:textSize="16sp"
                android:textColor="@color/gray_dark"
                android:background="#ffffff"
                android:textStyle="normal"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

