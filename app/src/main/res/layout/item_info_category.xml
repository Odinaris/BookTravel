<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2sp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="2sp"
    android:layout_margin="4sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon_category"
            android:layout_width="80sp"
            android:layout_height="100sp"
            android:padding="16sp"
            android:src="@drawable/ic_cat_education"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16sp">
            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="考研"
                android:textColor="#000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_category_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="143人关注·共156本书"
                android:textColor="#686868"
                android:textSize="14sp" />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/cv_follow_box"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:layout_margin="24sp"
            app:cardCornerRadius="16sp"
            app:cardBackgroundColor="#000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ProgressBar
                    android:id="@+id/pb_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12sp"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="关注"
                    android:textColor="#fff"
                    android:visibility="visible"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_unfollow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="已关注"
                    android:textColor="#000000"
                    android:background="@drawable/full_border"
                    android:gravity="center"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</android.support.v7.widget.CardView>